{% extends "base_home.html" %}

{% block title %}

{% endblock %}

{% block subhead %}
{% endblock subhead %}

{% block content %}

<dl>
	<article>
		<h1>
		
		{% if character.larp in userProfile.get_larps %}
			{{character.name}}
		{% else %}
			{% if character.larp.spoilerability != 'ch' %}
				{{character.name}}
			{% else %}
				[character name redacted] rhino
			{% endif %}
		{% endif %}
				
		</h1>
		<dt>LARP</dt><dd><a href="{{character.larp.get_absolute_url}}">{{ character.larp }}</a> </dd>
	</article>
	

</dl>
{% endblock %}

{% block sidebar %}

	{% if player_list %}
		<dt>Played by</dt>
		{% for player in player_list %}
			<dd><a href="{{player.userProfile.get_absolute_url}}">{{player}}</a>
				as {% include "eventCRUD/role_include.html" %}
				</dd>
		{% endfor %}
	{% endif %}

{% endblock sidebar %}